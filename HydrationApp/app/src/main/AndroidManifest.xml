<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hydrationapp">

    <application
        android:allowBackup="true"
        android:icon="@drawable/water"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/CustomTheme.HydrationApp">
        <activity
            android:name=".SizeSettings"
            android:exported="false" />
        <activity
            android:name=".UnitsSettings"
            android:exported="false"
            android:label="@string/title_activity_units_settings" />
        <activity
            android:name=".Settings"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>